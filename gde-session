#!/usr/bin/env bash

set -euo pipefail

# Find window manager
WM=$(echo $DESKTOP_SESSION)

# Define dmenu command
DMENU="dmenu -l 10"


main() {
    # Declare array of options
    declare -a options=(
	    "Logout"
	    "Suspend"
	    "Reboot"
	    "Poweroff"
    )

    choice=$(printf '%s\n' "${options[@]}" | ${DMENU} "${@}")

    case $choice in
        'Logout')
            if [[ "$(echo -e "Yes\nNo" | ${DMENU} -p "${choice}?" "${@}" )" == "Yes" ]]; then
                pkill $WM
            else
                exit 0
            fi
            ;;
        'Suspend')
            if [[ "$(echo -e "Yes\nNo" | ${DMENU} -p "${choice}?" "${@}" )" == "Yes" ]]; then
                loginctl suspend
            else
                exit 0
            fi
            ;;
        'Reboot')
            if [[ "$(echo -e "Yes\nNo" | ${DMENU} -p "${choice}?" "${@}" )" == "Yes" ]]; then
                loginctl reboot
            else
                exit 0
            fi
            ;;
        'Poweroff')
            if [[ "$(echo -e "Yes\nNo" | ${DMENU} -p "${choice}?" "${@}" )" == "Yes" ]]; then
                loginctl poweroff
            else
                exit 0
            fi
            ;;
        *)
            exit 0
            ;;
    esac
}

[[ "${BASH_SOURCE[0]}" == "${0}" ]] && main "$@"
